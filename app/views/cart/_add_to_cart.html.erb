<% if user_signed_in? %>
  <%= content_tag :div, id: "product-#{product.id}", data: {prod_id: product.id, user_id: current_user.id } do %>
  <% end %>
<% else %>
  <%= content_tag :div, id: "product-#{product.id}", data: {prod_id: product.id } do %>
  <% end %>
<% end %>
<button type="submit" class="add_to_cart btn btn-success mt-2 p-2">Add</button>
<button type="submit" class="remove_from_cart btn btn-danger mt-2 p-2">Remove</button>
